<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:layout_marginBottom="8dp"
    android:padding="8dp"
    android:elevation="2dp">

    <!-- Post Image -->
<ImageView
android:id="@+id/postImageMa"
android:layout_width="125dp"
android:layout_height="107dp"
android:scaleType="centerCrop"
android:layout_marginEnd="8dp" />

    <!-- Text Content (Title & Price) -->
<LinearLayout
android:layout_width="0dp"
android:layout_height="107dp"
android:layout_weight="1"
android:gravity="center_vertical"
android:orientation="vertical">

<!-- Post Title -->
<TextView
    android:id="@+id/postTitleMa"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="18sp"
    android:textStyle="bold"
    android:textColor="@android:color/black" />

<!-- Post Price -->
<TextView
    android:id="@+id/postPriceMa"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="2dp"
    android:textColor="@android:color/holo_green_dark"
    android:textSize="16sp" />

</LinearLayout>

    <!-- Options Menu ImageView -->
<ImageView
android:id="@+id/optionsMenuImageViewMa"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginTop="5dp"
android:src="@drawable/baseline_more_vert_24"
android:contentDescription="More options"
android:layout_marginStart="8dp" /> <!-- Add margin between the icon and text -->

    </LinearLayout>
