<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F7F9"
    android:padding="24dp">

    <!-- App Logo or Icon -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_thin"
        android:text="Buy4All"
        android:textColor="#1E293B"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Shopping Image with background -->
    <androidx.cardview.widget.CardView
        android:id="@+id/shoppingCard"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#E0F2F1"
        app:layout_constraintTop_toBottomOf="@+id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="48dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/baseline_shopping_cart_24" />
    </androidx.cardview.widget.CardView>

    <!-- Sell Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/sellbut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sell Product"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_thin"
        android:backgroundTint="#10B981"
        app:cornerRadius="28dp"
        app:icon="@drawable/baseline_shopping_cart_24"
        app:iconPadding="8dp"
        app:iconTint="@android:color/white"
        app:layout_constraintTop_toTopOf="@+id/shoppingCard"
        app:layout_constraintBottom_toBottomOf="@+id/shoppingCard"
        app:layout_constraintStart_toEndOf="@+id/shoppingCard"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp" />

    <!-- Service Image with background -->
    <androidx.cardview.widget.CardView
        android:id="@+id/serviceCard"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#E3F2FD"
        app:layout_constraintTop_toBottomOf="@+id/shoppingCard"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/baseline_home_repair_service_24" />
    </androidx.cardview.widget.CardView>

    <!-- Service Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/servicebut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Offer Service"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_thin"
        android:backgroundTint="#3B82F6"
        app:cornerRadius="28dp"
        app:icon="@drawable/baseline_home_repair_service_24"
        app:iconPadding="8dp"
        app:iconTint="@android:color/white"
        app:layout_constraintTop_toTopOf="@+id/serviceCard"
        app:layout_constraintBottom_toBottomOf="@+id/serviceCard"
        app:layout_constraintStart_toEndOf="@+id/serviceCard"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
